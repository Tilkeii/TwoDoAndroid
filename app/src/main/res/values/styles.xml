<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_rounded_light_grey</item>
        <item name="android:paddingTop">@dimen/input_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/input_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/input_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/input_padding_horizontal</item>
        <item name="android:textColorHint">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/font_default</item>
    </style>
</resources>
